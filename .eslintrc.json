{
  "env": {
    "browser": true,
    "es2021": true,
    "cypress/globals": true
  },
  "extends": [
    "eslint:recommended", // Add this line to enable Prettier
    "plugin:cypress/recommended",
    "plugin:prettier/recommended"  // Add this line to enable Prettier
  ],
  "plugins": [
    "cypress",
    "prettier"  // Enable the Prettier plugin
  ],
  "rules": {
    "no-unused-vars": "warn",
    "no-console": "off"
  },
  "parserOptions": {
    "sourceType": "module",
    "allowImportExportEverywhere": true
  }
}
