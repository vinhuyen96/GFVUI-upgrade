{
  "env": {
    "browser": true,
    "es2021": true,
    "cypress/globals": true
  },
  "extends": [
    "eslint:recommended", // Add this line to enable Prettier
    "plugin:cypress/recommended",
    "plugin:prettier/recommended", // Add this line to enable Prettier
    "airbnb"
  ],
  "plugins": [
    "cypress",
    "prettier"  // Enable the Prettier plugin
  ],
  "rules": {
    "prettier/prettier": "off",
    "no-unused-vars":"warn",
    "no-console": "off",
    "prefer-destructuring": ["error", {
      "array": true,
      "object": true
    }],
    "prefer-template": "warn",
    "semi": ["error", "always"],
    "quotes": ["error", "single"],
    "indent": ["error", 2],
    "comma-dangle": ["error", "always-multiline"],
    "cypress/unsafe-to-chain-command": "off"
  },
  "parserOptions": {
    "sourceType": "module",
    "allowImportExportEverywhere": true
  }
}
